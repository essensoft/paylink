    <PackageTags>Essensoft;Payment;WeChatPay;微信支付</PackageTags>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.1'">
    <PackageReference Include="System.Text.Json" Version="5.0.0" />
