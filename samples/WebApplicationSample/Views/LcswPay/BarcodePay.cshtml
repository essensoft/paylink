@model LcswPayBarcodePayViewModel
@{
    ViewData["Title"] = "刷卡（条码）支付";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="LcswPay" asp-action="Index">利楚商务扫呗支付</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>
<br />
<div class="card">
    <div class="card-body">
        <form asp-controller="LcswPay" asp-action="BarcodePay">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PayType"></label>
                <input type="text" class="form-control" asp-for="PayType"/>
            </div>
            <div class="form-group">
                <label asp-for="TerminalTime"></label>
                <input type="text" class="form-control" asp-for="TerminalTime"/>
            </div>
            <div class="form-group">
                <label asp-for="TerminalTrace"></label>
                <input type="text" class="form-control" asp-for="TerminalTrace"  />
            </div>
            <div class="form-group">
                <label asp-for="AuthNo"></label>
                <input type="text" class="form-control" asp-for="AuthNo"/>
            </div>
            <div class="form-group">
                <label asp-for="TotalFee"></label>
                <input type="text" class="form-control" asp-for="TotalFee"/>
            </div>
            <div class="form-group">
                <label asp-for="SubAppid"></label>
                <input type="text" class="form-control" asp-for="SubAppid"/>
            </div>
            <div class="form-group">
                <label asp-for="OrderBody"></label>
                <input type="text" class="form-control" asp-for="OrderBody"/>
            </div>
            <div class="form-group">
                <label asp-for="Attach"></label>
                <input type="text" class="form-control" asp-for="Attach"/>
            </div>            
            <div class="form-group">
                <label asp-for="GoodsDetail"></label>
                <input type="text" class="form-control" asp-for="GoodsDetail"/>
            </div>
            <div class="form-group">
                <label asp-for="GoodsTag"></label>
                <input type="text" class="form-control" asp-for="GoodsTag"/>
            </div>
            <button type="submit" class="btn btn-primary">提交请求</button>
        </form>
        <hr />
        <form class="form-horizontal">
            <div class="form-group">
                <label>Response:</label>
                <textarea class="form-control" rows="10">@ViewData["response"]</textarea>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
